{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block body %}
    <h1>Person index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameFirst</th>
                <th>NameMiddle</th>
                <th>NameLast</th>
                <th>NameSuffix</th>
                <th>AddressPhysicalLine1</th>
                <th>AddressPhysicalLine2</th>
                <th>AddressPhysicalCity</th>
                <th>AddressPhysicalState</th>
                <th>AddressPhysicalZipCode</th>
                <th>AddressMailingLine1</th>
                <th>AddressMailingLine2</th>
                <th>AddressMailingCity</th>
                <th>AddressMailingState</th>
                <th>AddressMailingZipCode</th>
                <th>PhoneHome</th>
                <th>PhoneMobile</th>
                <th>PhoneWork</th>
                <th>Url</th>
                <th>Email</th>
                <th>DateOfBirth</th>
                <th>DateOfDeath</th>
                <th>DeletedAt</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.nameFirst }}</td>
                <td>{{ person.nameMiddle }}</td>
                <td>{{ person.nameLast }}</td>
                <td>{{ person.nameSuffix }}</td>
                <td>{{ person.addressPhysicalLine1 }}</td>
                <td>{{ person.addressPhysicalLine2 }}</td>
                <td>{{ person.addressPhysicalCity }}</td>
                <td>{{ person.addressPhysicalState }}</td>
                <td>{{ person.addressPhysicalZipCode }}</td>
                <td>{{ person.addressMailingLine1 }}</td>
                <td>{{ person.addressMailingLine2 }}</td>
                <td>{{ person.addressMailingCity }}</td>
                <td>{{ person.addressMailingState }}</td>
                <td>{{ person.addressMailingZipCode }}</td>
                <td>{{ person.phoneHome }}</td>
                <td>{{ person.phoneMobile }}</td>
                <td>{{ person.phoneWork }}</td>
                <td>{{ person.url }}</td>
                <td>{{ person.email }}</td>
                <td>{{ person.dateOfBirth ? person.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ person.dateOfDeath ? person.dateOfDeath|date('Y-m-d') : '' }}</td>
                <td>{{ person.deletedAt ? person.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ person.createdAt ? person.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ person.updatedAt ? person.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('crud_person_show', {'id': person.id}) }}">show</a>
                    <a href="{{ path('crud_person_edit', {'id': person.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="26">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crud_person_new') }}">Create new</a>
{% endblock %}
