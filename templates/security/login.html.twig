{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
	<div class="row justify-content-md-center">
		<div class="login-form bg-light mt-4 p-4">
			<form method="post">
				<h1 class="mb-10">Please sign in</h1>
				<fieldset class="row mb-3">
					{% if error %}
						<div class="col-12">
							<div class="alert alert-danger">
								{{ error.messageKey|trans(error.messageData, 'security') }}
							</div>
						</div>
					{% endif %}
					<div class="col-12">
						<label class="form-label" for="inputEmail">Email</label>
						<input type="email"
						       name="email"
						       id="inputEmail"
						       class="form-control mb-4"
						       aria-describedby="emailHelp"
						       value="{{ last_username }}"
						       autocomplete="username"
						       required autofocus
						       tabindex="1"/>
					</div>
					<div class="col-12">
						<label class="form-label mb-3" for="inputPassword">Password</label>
						{#  <input type="password" name="password" id="inputPassword" class="form-control" required> #}
						<input type="password"
						       name="password"
						       id="inputPassword"
						       class="form-control mb-2"
						       autocomplete="current-password"
						       required
						       tabindex="2"/>
					</div>


					<div class="col-12 mb-3">
						<input type="checkbox" class="form-check_input" name="_remember_me" id="_remember_me"
						       tabindex="3"/>
						<label class="form-check-label" for="_remember_me">Remember me</label>
					</div>


					<div class="col-4 mt-2">
						<button class="btn btn-lg btn-primary float-start" type="submit" tabindex="4">
							Sign in
						</button>

					</div>


					<div class="col-4 mt-2">
						<a class="btn btn-lg btn-primary float-none" href="{{ path('app_user_recover_password') }}"
						   role="button" tabindex="5">Forgot Password</a>


					</div>


					<div class="col-4 mt-2">
						<a class="btn btn-lg btn-primary float-end" href="{{ path('app_signup') }}"
						   role="button">Sign Up!</a>
					</div>


				</fieldset>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
			</form>
		</div>
	</div>
{% endblock %}